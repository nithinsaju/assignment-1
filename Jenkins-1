pipeline {
  agent any
  tools {
  git 'Default'
  }
  stages {
    stage ("Prompt for input") {
      steps {
        script {
          env.NAME = input message: 'Please enter the name',
                             parameters: [string(defaultValue: '',
                                          description: '',
                                          name: 'Username')]
        }
        echo "Name: ${env.NAME}"
      }
    }
  }
}
